{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("dinkydodouk\\whm\\assetbundles\\whm\\WHMAsset") %}

{{ forms.textField({
    label: 'WHM API Key',
    instructions: 'You need to generate an API Key from your server.',
    id: 'whmApiKey',
    name: 'whmApiKey',
    value: settings['whmApiKey']})
}}

{{ forms.textField({
    label: 'Hostname',
    instructions: 'Enter the hostname of your server, or the IP Address.',
    id: 'hostname',
    name: 'hostname',
    value: settings['hostname']})
}}

{{ forms.textField({
    label: 'Port Number',
    instructions: 'Enter the Port Number of your server.',
    id: 'portNumber',
    name: 'portNumber',
    value: settings['portNumber']})
}}

{{ forms.textField({
    label: 'WHM API Username',
    instructions: 'Please enter the username for the WHM API.',
    id: 'username',
    name: 'username',
    value: settings['username']})
}}
